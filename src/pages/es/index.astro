                        <strong>{t.projectRuedaRent.tools}</strong>
                    </p>
                </div>
            </div>
        </section>

        <!-- Skills Section -->
        <section class="mb-16 md:mb-24">
            <h2 style="color: var(--text-primary);" class="text-2xl md:text-3xl font-bold mb-8 text-center">{t.skills}</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Programming Languages -->
                <div style="background-color: var(--bg-secondary); border-color: var(--border-color);" class="rounded-lg p-6 border">
                    <h3 style="color: var(--text-primary);" class="text-lg font-semibold mb-3">{t.skillsLanguages.title}</h3>
                    <p style="color: var(--text-secondary);" class="text-sm">{t.skillsLanguages.items}</p>
                </div>
                
                <!-- Frontend -->
                <div style="background-color: var(--bg-secondary); border-color: var(--border-color);" class="rounded-lg p-6 border">
                    <h3 style="color: var(--text-primary);" class="text-lg font-semibold mb-3">{t.skillsFrontend.title}</h3>
                    <p style="color: var(--text-secondary);" class="text-sm">{t.skillsFrontend.items}</p>
                </div>
                
                <!-- Backend -->
                <div style="background-color: var(--bg-secondary); border-color: var(--border-color);" class="rounded-lg p-6 border">
                    <h3 style="color: var(--text-primary);" class="text-lg font-semibold mb-3">{t.skillsBackend.title}</h3>
                    <p style="color: var(--text-secondary);" class="text-sm">{t.skillsBackend.items}</p>
                </div>
                
                <!-- Databases -->
                <div style="background-color: var(--bg-secondary); border-color: var(--border-color);" class="rounded-lg p-6 border">
                    <h3 style="color: var(--text-primary);" class="text-lg font-semibold mb-3">{t.skillsDatabases.title}</h3>
                    <p style="color: var(--text-secondary);" class="text-sm">{t.skillsDatabases.items}</p>
