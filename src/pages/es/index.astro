---
import Layout from '../../layouts/Layout.astro';
import { getTranslations } from '../../utils/i18n';

const lang = 'es';
const t = await getTranslations(lang);
---

<Layout title={t.meta.title}>
    <main class="max-w-6xl mx-auto px-6 md:px-12 py-8 md:py-16">
        <!-- Header Section -->
        <header class="text-center mb-16 md:mb-24">
            <div class="mb-8">
                <div style="background-color: var(--bg-secondary); border-color: var(--border-color);" class="w-32 h-32 md:w-40 md:h-40 rounded-full border-2 mx-auto mb-6 overflow-hidden">
                    <img 
                        src="/avatar.jpg" 
                        alt={t.name}
                        class="w-full h-full object-cover" 
                    />
                </div>
            </div>
            <h1 style="color: var(--text-primary);" class="text-4xl md:text-6xl font-bold mb-4">
                {t.name}
            </h1>
            <p style="color: var(--text-secondary);" class="text-lg md:text-xl max-w-2xl mx-auto mb-6">
                {t.title}
            </p>
            
            <!-- Contact Information -->
            <div style="color: var(--text-secondary);" class="text-base md:text-lg space-y-2 mb-6">
                <p>{t.phone}</p>
                <p>{t.email}</p>
            </div>

            <!-- Social Networks and Controls -->
            <div class="flex flex-wrap justify-center gap-4 mb-6">
                <!-- GitHub -->
