                    <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-4">
                        <div>
                            <h3 style="color: var(--text-primary);" class="text-xl md:text-2xl font-semibold">{t.certifications.cicd.title}</h3>
                            <p style="color: var(--text-secondary);" class="text-lg font-medium">{t.certifications.cicd.institution}</p>
