                    <div>
                        <h3 style="color: var(--text-primary);" class="text-xl md:text-2xl font-semibold">{t.educationTitle}</h3>
                        <p style="color: var(--text-secondary);" class="text-lg font-medium">{t.educationInstitution}</p>
                    </div>
                    <span style="color: var(--text-secondary);" class="text-sm md:text-base mt-2 md:mt-0">{t.educationPeriod}</span>
