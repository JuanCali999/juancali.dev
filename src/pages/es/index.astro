                    </svg>
                    <span>{t.switchLanguage}</span>
                </a>
                
                <!-- Theme Switcher -->
                <button 
                    id="theme-switcher" 
                    style="background-color: var(--bg-secondary); color: var(--text-primary); border-color: var(--border-color);"
                    class="px-4 py-2 rounded-lg border hover:opacity-80 transition-all flex items-center space-x-2"
                    aria-label="Toggle theme"
                >
                    <span id="theme-icon" class="text-lg">ðŸŒ™</span>
                    <span>Theme</span>
                </button>
            </div>
        </header>

        <!-- About Section -->
        <section class="mb-16 md:mb-24">
            <div style="background-color: var(--bg-secondary); border-color: var(--border-color);" class="rounded-lg p-6 md:p-12 border">
                <h2 style="color: var(--text-primary);" class="text-2xl md:text-3xl font-bold mb-6">{t.about}</h2>
                <p style="color: var(--text-secondary);" class="text-base md:text-lg leading-relaxed">
                    {t.aboutDescription}
                </p>
            </div>
        </section>

        <!-- Experience Section -->
        <section class="mb-16 md:mb-24">
            <h2 style="color: var(--text-primary);" class="text-2xl md:text-3xl font-bold mb-8 text-center">{t.experience}</h2>
            <div class="space-y-6 md:space-y-8">
                <div style="background-color: var(--bg-secondary); border-color: var(--border-color);" class="rounded-lg p-6 md:p-8 border hover:opacity-90 transition-all duration-300">
                    <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-4">
                        <div>
                            <h3 style="color: var(--text-primary);" class="text-xl md:text-2xl font-semibold">{t.experienceTitle}</h3>
                            <p style="color: var(--text-secondary);" class="text-lg font-medium">{t.experienceCompany}</p>
                            <a href={t.experienceWebsite} target="_blank" rel="noopener noreferrer" 
                               style="color: var(--accent);" class="text-sm hover:underline">
                                {t.experienceWebsite}
                            </a>
                        </div>
                        <span style="color: var(--text-secondary);" class="text-sm md:text-base mt-2 md:mt-0">2025</span>
                    </div>
                    <p style="color: var(--text-secondary);" class="text-base leading-relaxed">
                        {t.experienceDescription}
                    </p>
                </div>
            </div>
        </section>

        <!-- Education Section -->
