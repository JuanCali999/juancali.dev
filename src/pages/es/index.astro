                </div>

                <!-- Cybersecurity Certificate -->
                <div style="background-color: var(--bg-secondary); border-color: var(--border-color);" class="rounded-lg p-6 md:p-8 border hover:opacity-90 transition-all duration-300">
                    <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-4">
                        <div>
                            <h3 style="color: var(--text-primary);" class="text-xl md:text-2xl font-semibold">{t.certifications.cybersecurity.title}</h3>
                            <p style="color: var(--text-secondary);" class="text-lg font-medium">{t.certifications.cybersecurity.institution}</p>
                        </div>
                        <span style="color: var(--text-secondary);" class="text-sm md:text-base mt-2 md:mt-0">{t.certifications.cybersecurity.year}</span>
                    </div>
