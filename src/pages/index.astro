---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main class="max-w-6xl mx-auto px-6 md:px-12 py-8 md:py-16">
		<!-- Header Section -->
		<header class="text-center mb-16 md:mb-24">
			<div class="mb-8">
				<div class="w-32 h-32 md:w-40 md:h-40 rounded-full bg-section border-2 border-border mx-auto mb-6 overflow-hidden">
					<img 
